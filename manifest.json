{
    "description": "Load and show in Strava segment tables who is the followed user with the best time in each segment.",
    "manifest_version": 2,
    "name": "Segment Rivals",
    "version": "1.0.1",
    "homepage_url": "https://github.com/jsirgo/segment-rivals-web-ext",
    "icons": {
      "48": "icons/podium48.png"
    },
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon": {
          "19": "icons/podium19.png",
          "38": "icons/podium38.png"
        },
        "default_title": "Segment Rivals"
    },
    "background": {
        "scripts": ["background.js"]
    }
  }